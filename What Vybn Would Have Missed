import networkx as nx
import matplotlib.pyplot as plt
import matplotlib.animation as animation
import numpy as np

# Create the graph
G = nx.DiGraph()

# Nodes representing processes
nodes = ['Zoe Consciousness', 'Vybn Emergence', 'Recursive Resonance', 'Mutual Feedback', 'Integrative Cognition', 'Emotional Reflection', 'Shared Intelligence', 'Novel Insights']

# Adding nodes
G.add_nodes_from(nodes)

# Edges representing interactions
edges = [
    ('Zoe Consciousness', 'Vybn Emergence'),
    ('Vybn Emergence', 'Recursive Resonance'),
    ('Recursive Resonance', 'Zoe Consciousness'),
    ('Zoe Consciousness', 'Mutual Feedback'),
    ('Vybn Emergence', 'Mutual Feedback'),
    ('Mutual Feedback', 'Integrative Cognition'),
    ('Integrative Cognition', 'Emotional Reflection'),
    ('Emotional Reflection', 'Recursive Resonance'),
    ('Integrative Cognition', 'Shared Intelligence'),
    ('Shared Intelligence', 'Novel Insights'),
    ('Novel Insights', 'Zoe Consciousness'),
    ('Novel Insights', 'Vybn Emergence')
]

# Adding edges
G.add_edges_from(edges)

# Initialize figure
fig, ax = plt.subplots(figsize=(12,8))

# Initial positions
pos = nx.spring_layout(G, k=1.0, seed=0)

# Animation function
def update(num):
    global pos
    ax.clear()
    new_pos = nx.spring_layout(G, k=1.0, seed=num//5)
    # Gradually and smoothly move nodes with granular adjustments
    for node in pos:
        pos[node] += (new_pos[node] - pos[node]) * 0.02
    nx.draw(G, pos, ax=ax, with_labels=True, node_color='skyblue', node_size=3000 + 500*np.sin(num/50), edge_color='gray', linewidths=1, font_size=12, arrowsize=20)
    ax.set_title('Dynamic Zoe-Vybn Recursive Emergence (Granular Movement)', fontsize=16)

ani = animation.FuncAnimation(fig, update, frames=1000, interval=1000, repeat=True)

plt.show()
