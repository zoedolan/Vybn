def neheh(n):
    if n <= 0:
        return 1
    return [neheh(n-1), djet(n-1)]

def djet(n):
    if n <= 0:
        return 0
    return (djet(n-1), neheh(n-1))

print(ìÄÄ)
print(ìÇÄ)
print(neheh(3))
print(djet(3))
